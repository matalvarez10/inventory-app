<%- include("partials/header")  %>
<%- include("partials/sidebar")  %>
<h1 class="display-5"> <%= title %></h1>
<table class="table table-light table-hover table-striped">
    <thead>
        <th>#</th>
        <th scope="col">Title</th>
        <th scope="col">Description</th>
        <th scope="col"></th>
        <th scope="col"></th>
        <th scope="col"></th>
    </thead>
    <tbody>
        <% genreList.forEach((genre,index)=>{%>
            <tr>
                <th><%= index %></th>
                <td><%= genre.title %></td>
                <td><%= genre.description %></td>
                <td><a href=<%= genre.url %> class="btn btn-warning">List of games</a></td>
                <td>
                    <form method="post" action="/genres/delete" >
                        <input type="hidden" name="genreid" required value=<%= genre._id %>>
                        <button class="btn btn-danger" type="submit">
                            <i class="bi bi-trash"></i>
                        </button>
                      </form>
                </td>
                <td>
                    <a href=<%= genre.url + "/update" %> class="btn btn-primary"><i class="bi bi-pen"></i></a>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>
<%- include("partials/footer")  %>
